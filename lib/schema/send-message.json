    "$root": {
        "allowUndefined": false,
        "allowNull": false,
        "allowedTypes": "object"
    },
    "from": {
        "allowedTypes": "string"
    },
    "to": {
        "allowedTypes": [ "string", "array" ]
    },
    "message": {
        "allowedTypes": "string",
        "when": {
            "key": "templateType",
            "value": "open"
        }
    },
